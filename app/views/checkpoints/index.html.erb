<p id="notice"><%= notice %></p>

<h1>Listing Checkpoints</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Arrival</th>
      <th>Departure</th>
      <th>Date</th>
      <th>Barcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checkpoints.each do |checkpoint| %>
      <tr>
        <td><%= checkpoint.arrival.strftime("%H:%M:%S") %></td>
        <td><%= checkpoint.departure.strftime("%H:%M:%S") %></td>
        <td><%= checkpoint.date %></td>
        <td><%= checkpoint.barcode %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checkpoint', new_checkpoint_path %>
